<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Testing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="style1">
        <item name="android:textSize">20sp</item>
        <item name="android:color">#f3f3f3</item>
    </style>
    <style name="style2">
        <item name="android:textSize">30sp</item>
        <item name="android:color">#f4f4f4</item>
    </style>
    <style name="buttonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:color">#ffffff</item>
        <item name="android:backgroundTint">#039F77</item>
        <item name="android:radius">24px</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>